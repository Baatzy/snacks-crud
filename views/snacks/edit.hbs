<h1>Edit Review for {{ snack.name }} (PUT)</h1>

<form method="POST" action="/snacks/{{ snack.id }}?_method=PUT" class="well">
  <div class="form-group">
    <label for="name">Name</label>
    <input name="name" type="text" class="form-control" value='{{ snack.name }}'>
  </div>
  <div class="form-group">
    <label for="rating">Rating</label>
    <input name="rating" type="number" class="form-control" value='{{ snack.rating }}' min="1" max="10">
  </div>
  <div class="form-group">
    <label for="review">Review</label>
    <input name="review-description" type="text" class="form-control" value='{{ snack.review_description }}'>
  </div>
  <div class="form-group">
    <label for="image-url">Image URL</label>
    <input name="image-url" type="text" class="form-control" value='{{ snack.image_url }}'>
  </div>
  <div class="form-group">
    <input id="submit" type="submit">
  </div>
</form>
